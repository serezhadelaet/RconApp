<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:id="@+id/activity_player_info_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/ic_rust_logo"/>

    <TextView
        android:id="@+id/activity_player_info_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:text="PlayerName\n[76561100000000000]"
        android:textSize="16sp"
        android:layout_alignBottom="@id/activity_player_info_image"
        android:layout_toRightOf="@id/activity_player_info_image"/>

    <Button
        android:id="@+id/activity_player_info_steam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open profile"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_below="@id/activity_player_info_image"/>

    <Button
        android:id="@+id/activity_player_info_copyid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Copy USER ID"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_below="@id/activity_player_info_image"
        android:layout_toRightOf="@id/activity_player_info_steam"/>

    <TextView
        android:id="@+id/activity_player_info_server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Server: #1"
        android:textSize="20sp"
        android:layout_below="@id/activity_player_info_steam"/>

    <TextView
        android:id="@+id/activity_player_info_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@id/activity_player_info_server"
        android:text="Playtime: 20h 3m"/>

    <TextView
        android:id="@+id/activity_player_info_ping"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@id/activity_player_info_time"
        android:text="Ping: 50"/>

    <Button
        android:id="@+id/activity_player_info_mute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mute"
        android:layout_below="@id/activity_player_info_ping"/>

    <Button
        android:id="@+id/activity_player_info_kick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:text="Kick"
        android:layout_below="@id/activity_player_info_ping"
        android:layout_toRightOf="@id/activity_player_info_mute"/>

    <Button
        android:id="@+id/activity_player_info_ban"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:text="Ban"
        android:layout_below="@id/activity_player_info_ping"
        android:layout_toRightOf="@id/activity_player_info_kick"/>


</RelativeLayout>