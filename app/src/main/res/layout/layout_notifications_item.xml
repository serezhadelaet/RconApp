<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@drawable/message_dr"
    >

    <EditText
        android:id="@+id/layout_notifications_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textAlignment="center"
        android:imeOptions = "actionDone"
        android:inputType="textNoSuggestions"
        android:textSize="18dp"/>
    <CheckBox
        android:id="@+id/layout_notifications_item_notify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification"
        android:layout_below="@id/layout_notifications_item_text"
        android:textColor="@color/colorAccentDark"/>
    <CheckBox
        android:id="@+id/layout_notifications_item_vibration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vibration"
        android:layout_below="@id/layout_notifications_item_text"
        android:layout_toRightOf="@id/layout_notifications_item_notify"
        android:textColor="@color/colorAccentDark"/>
    <CheckBox
        android:id="@+id/layout_notifications_item_sound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_notifications_item_text"
        android:text="Sound"
        android:layout_toRightOf="@id/layout_notifications_item_vibration"
        android:textColor="@color/colorAccentDark"/>
    <Button
        android:id="@+id/layout_notifications_item_del"
        android:layout_below="@id/layout_notifications_item_text"
        android:layout_alignParentRight="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textColor="@color/colorAccent"
        android:background="?android:attr/selectableItemBackground"
        android:textSize="16dp"
        android:text="-"/>

</RelativeLayout>