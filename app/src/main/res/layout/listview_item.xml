<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">



        <TextView
            android:id="@+id/listview_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#2"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/listview_textAdress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="185.97.255.18:50000"
            android:textSize="18dp"
            android:layout_below="@id/listview_text"
            />
        <Button android:id="@+id/listview_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_toLeftOf="@id/listview_delete"
            android:textSize="18dp"
            android:text="Edit"/>
        <Button android:id="@+id/listview_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_alignParentRight="true"
            android:textSize="18dp"
            android:text="Delete"/>

</RelativeLayout>