<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:openDrawer="start">

    <RelativeLayout
        android:id="@+id/staticLayout"
        android:layout_width="wrap_content"
        android:paddingBottom="56dp"
        android:layout_height="wrap_content">

        <de.codecrafters.tableview.SortableTableView
            xmlns:table="http://schemas.android.com/apk/res-auto"
            table:tableView_headerElevation="10"
            android:scrollbars="vertical"
            table:tableView_headerColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:id="@+id/tableView"
            android:layout_height="match_parent" table:tableView_columnCount="4"
            table:layout_constraintHeight_max="wrap" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="76dp"
        android:fillViewport="true"
        android:layout_weight="1"
        android:gravity="bottom">
        <TextView
            android:id="@+id/mainOutput"
            android:layout_width="match_parent"
            android:gravity="bottom"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:layout_alignParentBottom="true"/>
    </ScrollView>

    <ScrollView
        android:id="@+id/scrollViewChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="76dp"
        android:fillViewport="true"
        android:layout_weight="1"
        android:gravity="bottom"
        android:visibility="invisible">
        <TextView
            android:id="@+id/chatOutput"
            android:layout_width="match_parent"
            android:gravity="bottom"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:layout_alignParentBottom="true" />
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#ffffff"
            android:layout_alignParentBottom="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/navigation" />
        <LinearLayout
            android:id="@+id/consoleInputLayout"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="56dp"
            android:orientation="horizontal"
            android:background="@drawable/side_nav_bar" >

        <EditText
            android:id="@+id/consoleInput"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="top|start"
            android:maxLines="1"
            android:lines="1"
            android:inputType="textNoSuggestions"
            android:imeOptions = "actionSend"
            android:background="@android:color/transparent"
            android:scrollHorizontally="false"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="#ffffff" />
        </LinearLayout>
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@menu/nav_header_main"
        app:itemIconPadding = "10dp"
        app:menu="@menu/nav_menu_drawer" />

</androidx.drawerlayout.widget.DrawerLayout>